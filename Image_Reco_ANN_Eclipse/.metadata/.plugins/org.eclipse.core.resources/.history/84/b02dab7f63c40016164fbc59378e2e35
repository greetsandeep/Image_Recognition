package artificialneuralnetworks;

public class PoseRecognizer {
	int correct = 0;
	int wrong = 0;
	int prediction = 0;

	
	public void updateResults(int prediction,String filename){
		if(prediction == 1)
		{
			if(filename.contains("straight"))
				correct++;
			else
				wrong++;
		}else if(prediction == 2){
			
		}
		else{
			if(filename.contains("open"))
				correct++;
			else
				wrong++;
		}
	}
}
